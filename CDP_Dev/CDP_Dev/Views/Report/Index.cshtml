@{
    ViewData["Title"] = "Index";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<h3>Reports</h3>
<p>
    <a type="button" class="btn btn-info" asp-action="MarkUserAllocation">Mark User Allocation</a>
    <a type="button" class="btn btn-info" asp-action="MarkUserInternal">Mark User Internal</a>
    <a type="button" class="btn btn-info" asp-action="MarkUserMentor">Mark User Mentor</a>
</p>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label class="control-label"></label>
            <select id="UserId" class="form-control" asp-items="@(new SelectList(@ViewBag.UserList,"Id", "DisplayName"))"> </select>
        </div>
    </div>
</div>
<div class="row">
    <h4>User Allocation</h4>
    <div class="col-sm-12">
        <table id="userAllocation" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Period</th>
                    <th>User Allocation</th>
                    <th>Comment</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="row">
    <h4>User Internal</h4>
    <div class="col-sm-12">
        <table id="userInternal" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Period</th>
                    <th>User Internal</th>
                    <th>Comment</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="row">
    <h4>User Mentor</h4>
    <div class="col-sm-12">
        <table id="userMentor" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Period</th>
                    <th>User Mentor</th>
                    <th>Comment</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
