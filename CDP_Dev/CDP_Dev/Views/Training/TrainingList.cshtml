                    <th>@Html.DisplayNameFor(model => model.TOC)</th>
                    <th>@Html.DisplayNameFor(model => model.IsExternal)</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
