@model CDP.Core.Training.TrainingMaster

@{
    ViewData["Title"] = "Edit Training Master";
}

<h3>Edit Training Master</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTrainingMaster">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="TrainingCategoryId" class="control-label"></label>
                <input asp-for="TrainingCategoryId" class="form-control" />
                <span asp-validation-for="TrainingCategoryId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="TrainingCategory" class="control-label"></label>
                <select asp-for="TrainingCategoryId" class="form-control" asp-items="@(new SelectList(@ViewBag.TrainingCategoryList,"Id", "Name"))"> </select>
                <span asp-validation-for="TrainingCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TOC" class="control-label"></label>
                <input asp-for="TOC" class="form-control" />
                <span asp-validation-for="TOC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsExternal" /> @Html.DisplayNameFor(model => model.IsExternal)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="TrainingList">Back to List</a>*@
    <a class="btn btn-info" asp-action="TrainingList"><span class="glyphicon glyphicon-arrow-left"></span></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
